{
  "name": "app",
  "private": true,
  "scripts": {
    "predev": "run-s codegen 'typeorm schema:sync' init:db",
    "dev": "next dev",
    "prebuild": "echo '### BEFORE ###' && ls -la",
    "build": "next build && npm run predev",
    "postbuild": "node -e 'const pkg = require(\"./.next/server/pages/api/graphql.js.nft.json\"); pkg.files.push(\"../../../../node_modules/sql.js/dist/sql-wasm.wasm\"); require(\"fs\").writeFileSync(\".next/server/pages/api/graphql.js.nft.json\", JSON.stringify(pkg))'",
    "start": "next start",
    "lint": "next lint",
    "codegen": "graphql-codegen --config codegen.yml",
    "typeorm": "node -r ts-node/register/transpile-only $(npm bin)/typeorm",
    "init:db": "node -r ts-node/register/transpile-only src/init-db.ts"
  },
  "dependencies": {
    "@fast-csv/parse": "^4.3.6",
    "apollo-server-core": "^3.6.0",
    "apollo-server-micro": "^3.5.0",
    "graphql": "^15.8.0",
    "next": "12.0.7",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "reflect-metadata": "^0.1.13",
    "sql.js": "^1.6.2",
    "typeorm": "^0.2.41"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.3.0",
    "@graphql-codegen/typescript": "2.4.1",
    "@graphql-codegen/typescript-resolvers": "^2.4.2",
    "@types/node": "17.0.5",
    "@types/react": "17.0.38",
    "eslint": "8.5.0",
    "eslint-config-next": "12.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "typescript": "4.5.4"
  }
}
